<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/partials/card.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs') %>

    <main class="home-container">
      <div class="carrousel-container">
        <img
          class="carrousel-item"
          src="https://th.bing.com/th/id/R.08cce742e2463bd297a408f61ed9c089?rik=A3LQHjx02lZTzw&pid=ImgRaw&r=0"
        />
        <img
          class="carrousel-item"
          src="https://wallpapercave.com/wp/BeMfPus.jpg"
        />
        <img
          class="carrousel-item"
          src="https://wallpapercave.com/wp/QjG9Ppv.jpg"
        />
      </div>

      <section class="featured-products">
        <div class="featured-products-title">
          <h2>Nuestros productos m√°s vendidos</h2>
          <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit.</p>
        </div>

        <div class="cards-container">
          <% products.slice(0, 8).forEach(product => { %> <%-
            include('./partials/card.ejs', {product}) %> <% }) %>
        </div>
      </section>
    </main>

    <script>
      let index = 0;
      const imagenes = document.querySelectorAll('.carrousel-container img');
      const tiempoIntervalo = 3000; 
  
      function cambiarImagen() {
          for (let i = 0; i < imagenes.length; i++) {
              imagenes[i].style.display = 'none';
          }
          index = (index + 1) % imagenes.length;
          imagenes[index].style.display = 'block';
      }
  
      setInterval(cambiarImagen, tiempoIntervalo);
  </script>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
