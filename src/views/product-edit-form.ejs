<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/form-styles.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <form
        class="form"
        action="/products/<%= product.id %>/edit?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <h2 class="title">Edición de productos</h2>
        <div class="searchNav">
          <input
            type="text"
            placeholder="Buscar productos, marcas y más…"
            maxlength="120"
            autocapitalize="off"
            spellcheck="false"
            autocomplete="off"
            value="<%= product.id %>"
          />
          <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <input
          class="input"
          type="text"
          name="name"
          placeholder="Nombre del producto"
          value="<%= product.name %>"
        />
        <input
          class="input"
          type="number"
          name="price"
          placeholder="Precio"
          value="<%= product.price %>"
        />
        <input
          class="input"
          type="text"
          name="description"
          placeholder="Descripción"
          value="<%= product.description %>"
        />
        <input
          class="input"
          type="number"
          name="brand_id"
          placeholder="Id de Marca"
          value="<%= product.brand_id %>"
        />
        <input
          class="input"
          type="number"
          name="category_id"
          placeholder="Id de Categoría"
          value="<%= product.category_id %>"
        />

        <input
          class="input"
          type="number"
          name="size_id"
          placeholder="Id de Medida"
          value="<%= product.size_id %>"
        />

        <div class="picture">
          <label for="productPicture">Selecciona una imagen del producto</label>
          <input
            type="file"
            id="productPicture"
            name="productPicture"
            accept=".jpg"
          />
        </div>

        <div class="buttons-container">
          <button class="button" type="submit">Editar</button>
        </div>
      </form>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
