<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/form-styles.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <form
        class="form"
        action="/products/<%= product.id %>/edit?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <h2 class="title">Editar producto</h2>
          <input
            class="input"
            type="text"
            placeholder="ID del producto"
            maxlength="200"
            autocapitalize="off"
            spellcheck="false"
            autocomplete="off"
            value="<%= product.id %>"
          />
          <input
            class="input"
            type="text"
            name="name"
            placeholder="Nombre del producto"
            value="<%= product.name %>"
          />
          <input
            class="input"
            type="number"
            name="price"
            placeholder="Precio"
            value="<%= product.price %>"
          />
          <input
            class="input"
            type="text"
            name="description"
            placeholder="Descripción"
            value="<%= product.description %>"
          />
          <input
            class="input"
            type="number"
            name="brand_id"
            placeholder="ID de la marca"
            value="<%= product.brand_id %>"
          />
          <input
            class="input"
            type="number"
            name="category_id"
            placeholder="ID de la categoría"
            value="<%= product.category_id %>"
          />

        <input
          class="input"
          type="number"
          name="size_id"
          placeholder="ID de la medida"
          value="<%= product.size_id %>"
        />

        <div class="picture">
          <label for="image">Seleccioná una nueva imágen</label>
          <input
            type="file"
            id="image"
            name="image"
            accept=".jpg, .png, .jpeg"
          />
        </div>

        <div class="buttons-container">
          <button class="button" type="submit">Editar</button>
        </div>
      </form>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
