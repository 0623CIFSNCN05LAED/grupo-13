<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/form-styles.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <form
        class="form"
        action="/users/<%= user.id %>/delete?_method=delete"
        method="POST"
      >
        <h2 class="title">Eliminar usuarios</h2>
        <div class="searchNav">
          <input
            type="text"
            placeholder="Buscar productos, marcas y más…"
            maxlength="120"
            autocapitalize="off"
            spellcheck="false"
            autocomplete="off"
            value="<%= user.id %>"
          />
          <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <input
          class="input"
          type="text"
          name="first_name"
          placeholder="Nombre del usuario"
          value="<%= user.first_name %>"
        />
        <input
          class="input"
          type="text"
          name="last_name"
          placeholder="Apellido del usuario"
          value="<%= user.last_name %>"
        />
        <input
          class="input"
          type="email"
          name="email"
          placeholder="Email"
          value="<%= user.email %>"
        />

        <input
          class="input"
          type="role_id"
          name="role_id"
          placeholder="role_id"
          value="<%= user.role_id %>"
        />

        <input
          class="input"
          type="text"
          name="contact_number"
          placeholder="Número de contacto"
          value="<%= user.contact_number %>"
        />
        <input
          class="input"
          type="text"
          name="birth_date"
          placeholder="Fecha de cumpleaños"
          value="<%= user.birth_date %>"
        />
        <input
          class="input"
          type="text"
          name="address"
          placeholder="Dirección"
          value="<%= user.address %>"
        />
        <div class="buttons-container">
          <button class="delete-button" type="submit">Borrar</button>
        </div>
      </form>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
