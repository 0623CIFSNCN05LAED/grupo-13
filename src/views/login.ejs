<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <%- include('./partials/header.ejs') %>

    <main>
      <!-- Logo -->
      <div class="logo-login">
        <img src="/images/logo.png" alt="logo" />
      </div>
      <!-- Títulos del login -->
      <div class="form-containerL">
        <section class="text-rightL">
          <div>
            <p class="e-beerL">E-BEER</p>
          </div>

          <div class="loginInicioText">
            <p class="inicioTextL">Inicia sesión y adentrate</p>
            <p class="inicioText2L">en nuestra tienda</p>
          </div>
        </section>
        <!-- Formulario del login -->
        <form class="loginForm" action="/" method="get">
          <label for="e-mail"></label>
          <input
            type="email"
            name="e-mail"
            id="e-mail"
            placeholder="Correo electrónico"
            autocomplete="email"
          />
          <label for="contraseña"></label>
          <input
            type="password"
            name="contraseña"
            id="contraseña"
            placeholder="Ingresar contraseña"
            autocomplete="current-password"
          />

          <button type="submit">Iniciar sesión</button>
          <p class="textSmallL">
            <span class="textL"><a href="#">¿Olvidaste tu contraseña?</a></span>
            <span class="textL"
              >¿No tenés cuenta? <a href="/register">Regístrate</a></span
            >
          </p>
        </form>
      </div>
    </main>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
